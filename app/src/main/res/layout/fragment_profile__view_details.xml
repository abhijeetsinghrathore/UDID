<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile_ViewDetailsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="View Details"
            android:background="@drawable/rounded_button"
            android:layout_margin="20dp"
            android:id="@+id/viewDetailsButtonID"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Name : "
            android:textSize="25dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/getfirstnameID"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Name : "
            android:textSize="25dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/getlastnameID"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"/>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date of Birth : "
            android:textSize="25dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/getdobID"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="State Name : "
            android:textSize="25dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/getstateID"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"/>





        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City Name : "
            android:textSize="25dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/getcityID"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"/>






        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address : "
            android:textSize="25dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/getaddressID"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"/>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact : "
            android:textSize="25dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/getcontactID"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"/>



    </LinearLayout>



</ScrollView>